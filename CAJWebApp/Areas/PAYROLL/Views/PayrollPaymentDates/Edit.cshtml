@model CAJWebApp.Areas.PAYROLL.Models.PayrollPaymentDatesModel

@{
    ViewBag.Root = "Tanggal Pembayaran Payroll";
    ViewBag.Title = "Edit";
}

<div class="content-wrapper">

    <!-- Content area -->
    <div class="content">
        @using (Html.BeginForm(new { page = ViewBag.CurrentPage }))
        {
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                <!-- Form inputs -->
                <div class="card">
                    <div class="card-header header-elements-inline">
                        <h5 class="card-title">@ViewBag.Root</h5>
                    </div>
                    <div class="card-body">
                        <fieldset class="mb-3">
                            <legend class="text-uppercase font-size-sm font-weight-bold">@ViewBag.Title</legend>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.PayDate, htmlAttributes: new { @class = "col-form-label col-lg-2" })
                                <div class="col-lg-5">
                                    @Html.EditorFor(model => model.PayDate, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.PayDate, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-5"></div>
                            </div>
                        </fieldset>
                        <div>
                            <button type="submit" class="btn btn-primary">Submit<i class="icon-paperplane ml-2"></i></button>
                            <a href="@Url.Action("Index", "PayrollPaymentDates", new { Area = "Payroll" })" class="btn btn-warning">Cancel<i class="icon-cross2 ml-2"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /form inputs -->
            }
        }
    </div>
    <!-- /content area -->
</div>
