                            @Html.LabelFor(model => model.Identification, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-5">
                                @Html.EditorFor(model => model.Identification, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Identification, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-5"></div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Fullname, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
