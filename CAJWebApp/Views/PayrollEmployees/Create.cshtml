                            @Html.LabelFor(model => model.Customer_CustomerID, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-5">
                                @Html.DropDownListFor(model => model.Customer_CustomerID, ViewBag.Customer as SelectList, "Pilih", new { @class = "form-control select2" })
                                @Html.ValidationMessageFor(model => model.Customer_CustomerID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-5"></div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.JoinDate, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-5">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.JoinDate, new { htmlAttributes = new { @class = "form-control daterange-picker" } })
                                    <span class="input-group-append">
                                        <span class="input-group-text"><i class="icon-calendar"></i></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(model => model.JoinDate, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-5"></div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.WorkHourPerDay, htmlAttributes: new { @class = "col-form-label col-lg-2 required" })
                            <div class="col-lg-5">
                                @Html.EditorFor(model => model.WorkHourPerDay, new { htmlAttributes = new { @class = "form-control", @Value = @ViewBag.DefaultWorkHoursPerDay } })
                            </div>
                            <div class="col-lg-5">
                                @Html.ValidationMessageFor(model => model.WorkHourPerDay, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
